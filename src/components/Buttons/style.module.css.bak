/*  boton tienda y pago desktop*/
.cta{
    font-family: var(--fonts);
    font-weight: 500;
    font-size: 1rem;
    line-height: 165%;
    border-radius: 2px;
    margin-top: 0.2vh;
    transition: 400ms;
    margin-left: 1rem;
    color: #57277e;
    border: 1px solid #57277e;
    width: max-content;
    background-color: white;
  }
  .cta a,
  .cta span {
    display: block;
    padding: 0.5rem 1rem;
    margin: 0;
    cursor: pointer;
  }
  .cta a{
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .cta:hover { 
    background-color: #d2d2d2;
    color: #57277e;
  }
  .cta:disabled span,
  .primary-bg:disabled span,
  .secondary-bg:disabled span {
    background-color: var(--grey-text);
    color: white !important;
    cursor: not-allowed;
  }
  
  .emptyDiv{
    display: flex;
    width: 8px
  }

  /*   boton pago cuota online mobile*/
  .mobileHeaderBtn{
    width: 80vw;
    overflow: hidden;
    height: 8rem;
    font-size: 2.2rem;
    border-radius: 0.25rem;
    line-height: 3rem;
    background-color:#c8b1db;
    color:white
}
.mobileHeaderBtn:hover{
    background-color:#fc7eeb46;

}
  
  
/*  "t1 cta primary-bg"  boton prestamo*/

.prestamoBtn{
    color:white;
    font-family: var(--fonts);
    font-weight: 500;
    font-size: 1rem;
    line-height: 165%;
    border-radius: 2px;
    border: 1px solid #57277e;
    background-color: var(--primary);
    transition: 400ms;
    min-width: 114px;
}
.prestamoBtn a,
.prestamoBtn span {
  display: block;
  padding: 0.5rem 1rem;
  margin: 0;
  cursor: pointer;
}
.prestamoBtn:hover { 
    background-color: white;
    color: #57277e;
  }
  
  .prestamoBtn:disabled span,
  .primary-bg:disabled span,
  .secondary-bg:disabled span {
    background-color: var(--grey-text);
    color: white !important;
    cursor: not-allowed;
}

.BtnMobile{
    width: 80vw;
    height: 8rem;
    font-size:2.2rem;
    border-radius: 0.25rem;
    line-height:3rem;
}


  @media (max-width: 900px) {
    .cta a,
    .cta span {
      color: white;
      display: block;
      padding: -2.5rem 2rem;
      margin: 0;
      cursor: pointer;
    }
  }


  @media (max-width: 1000px) {
    .cta a,
    .cta span {
      
      display:flex;

      margin: 0;
      cursor: pointer;
    }
    .cta{
        width: max-content;
    }
    .cta:first-child{
      width: auto;
    }
  }